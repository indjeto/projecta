{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.status.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ task.duration }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>
                    {% if task.project %}
                        <a href="{{ path('app_project_show', {'id': task.project.id}) }}">{{ task.project }}</a>
                    {%  endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">back to list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
